{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore our best products!"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}

<div class="custom-banner" style="text-align: center; padding: 50px; background: #f5f5f5;">
  <h1>{{ section.settings.heading }}</h1>
  <p>{{ section.settings.subheading }}</p>
  <a href="{{ section.settings.button_link }}" class="banner-btn">{{ section.settings.button_text }}</a>
</div>

<style>
  .banner-btn {
    display: inline-block;
    padding: 12px 25px;
    margin-top: 20px;
    background-color: black;
    color: white;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .banner-btn:hover {
    transform: scale(1.05);
    background-color: #333;
  }
</style>
