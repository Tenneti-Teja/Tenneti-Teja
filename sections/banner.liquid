<section class="banner-section">
  <div class="banner-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="banner-button">{{ section.settings.button_label }}</a>
    <p class="footer-text">{{ section.settings.footer }}</p>
  </div>
</section>

<style>
  .banner-section {
    background-image: url('{{ section.settings.background | image_url }}');
    background-size: cover;
    background-position: center;
    padding: 3rem;
    color: #000;
    text-align: center;
  }
  .banner-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: yellow;
    color: black;
    text-decoration: none;
    transition: all 0.3s ease;
    font-weight: bold;
  }
  .banner-button:hover {
    transform: scale(1.05);
    background: black;
    color: white;
  }
</style>

{% schema %}
{
  "name": "Banner Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "text",
      "id": "footer",
      "label": "Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "image_picker",
      "id": "background",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Banner Section"
    }
  ]
}
{% endschema %}
